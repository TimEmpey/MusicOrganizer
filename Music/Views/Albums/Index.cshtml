<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>My To-Do List!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
  </head>
  <body>
    @using Music.Models;

    <h1>To Do List</h1>
    <h1>you are on the album index page</h1>

    @if (Model.Count == 0)
    {
      <p>There are no albums in the list.</p>
    }
    <ul>
      @foreach (Album album in Model)
      {
        <li><a href="/albums/@album.Id">@album.Description</a></li>
      }
    </ul>
    <a href="/albums/new">Add a new album.</a>
    <form action="/albums/delete" method="post">
      <button type="submit" name="button">Clear List</button>
    </form>
  </body>
</html>