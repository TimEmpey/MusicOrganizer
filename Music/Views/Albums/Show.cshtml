<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>My To-Do List!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
  </head>
  <body>
    @using Music.Models;
<h1>To Do List Album Details: </h1>

<h2>@Model["album"].Description</h2>
<h3>Artist: @Model["artist"].Name</h3>
<h4>Songs</h4>

    <ol>
    @{
      
        if(Model.Count == 0)
      {
        <li>There are no songs in this album.</li>
      }
      else
      {
          @foreach (Song song in @Model["songs"])
        {
          <li><a>@song.Name</a></li>
        }
      }
    }
    </ol>
     

<a href='/artists/@Model["artist"].Id/albums/@Model["album"].Id/songs/new'>Add songs</a>
<a href='/artists'>View all artists</a>
  </body>
</html>